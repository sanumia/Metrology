<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Parser.MainPage">

    <ScrollView>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            
            <Image
                Grid.Column="0"
                Grid.Row="1"
                Source="homyak.jpg"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="sad homyak" />


            <Label
                Grid.Column="0"
                Grid.ColumnSpan="1"
                Grid.Row="0"
                Text="Метрики Холстеда"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Метрики Холстеда" />

            <Button
                Grid.Column="1"
                Grid.Row="1"
                x:Name="CounterBtn"
                Text="Click me" 
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="OnCounterClicked"
                HorizontalOptions="Fill" />
            <Label
                Grid.Column="0"
                Grid.ColumnSpan="1"
                Grid.Row="2"
                Text="Здесь будет таблица"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Welcome to dot net Multi platform App U I" />
        </Grid>


    </ScrollView>

</ContentPage>
